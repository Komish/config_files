(custom-set-variables
 ;; custom-set-variables was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 '(ansi-color-faces-vector
   [default default default italic underline success warning error])
 '(ansi-color-names-vector
   ["black" "#d55e00" "#009e73" "#f8ec59" "#0072b2" "#cc79a7" "#56b4e9" "white"])
 '(custom-enabled-themes (quote (deeper-blue))))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
 ;; If you edit it by hand, you could mess it up, so be careful.
 ;; Your init file should contain only one such instance.
 ;; If there is more than one, they won't work right.
 )

;; set the font.
;; TODO(komish): figure out how to move this to a local config
;; because this might differ per machine.
(set-default-font "Iosevka Term-16")

;; set the todo hierarchy
(setq org-todo-keywords
  '(
(sequence "PENDING" "TODO" "WORKING" "DONE")
))

(setq org-todo-keyword-faces
      '(("WORKING" . "#E35DBF")
	("PENDING" . "#d4b45d")))

;; remove splash screen emacs
(setq inhibit-splash-screen t)

;; parenthesis mode
(show-paren-mode t)

;; Show line-number in the mode line
(line-number-mode 1)

;; Show column-number in the mode line
(column-number-mode 1)

;; Scroll line by line
(setq scroll-step 1)

;; track done time
(setq org-log-done 'time)
